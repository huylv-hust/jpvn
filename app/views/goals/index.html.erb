<p id="notice"><%= notice %></p>

<h1>目標リスト</h1>

<table>
  <thead>
    <tr>
      <th>Name of goal</th>
      <th>Average score</th>
      <th>Started at</th>
      <th>Deadline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @goals.count != 0 %>
      <% @goals.each do |goal| %>
        <tr>
          <td><%= goal.name %></td>
          <td><%= goal.average_score %></td>
          <% if goal.started_at. == nil %>
            <td>Not started</td>
          <% else %>
            <td><%= goal.started_at %></td>
          <% end %>
          <td><%= goal.deadline %></td>
          <td><%= link_to "Show", goal %></td>
          <td><%= link_to "Edit", edit_goal_path(goal) %></td>
          <td><%= link_to "Destroy", goal, method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
      <% end %>
    <% else %>
      <p> You have 0 goal. </p>
    <% end %>  
  </tbody>
</table>

<br>

